    <!-- //header -->

    <div id="MainBody">
        @*<div id="MainBody_Header">
        </div>
        <div id="MainBody_Body">
            <p>Подождите, загружаем заказы</p>
        </div>*@
    </div>

            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="copyright col">
                            <p class="copy-right-item">Все права защищены © 2018 Delans.</p>
                        </div>
                        <div class="confinencial col">
                            <a href="#" target="_blank">Политика конфиденциальности</a>
                        </div>
                    </div>

                </div>
            </footer>

            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        $("#MainBody").load('@Url.Action("GetTableBody_Header", "Delans")');
    });
</script>


<script type="text/javascript">
    function GetBody(EventCallerId) {
        let elem = $('#MainBody');
        if (EventCallerId == "CalculatorEvent") {
            elem.load('@Url.Action("GetCalculatorBody", "Delans")');
        }
        else if (EventCallerId == "ShipmentEvent") {

            $("#MainBody").load('@Url.Action("GetTableBody_Header", "Delans")');

        }
    }
</script>