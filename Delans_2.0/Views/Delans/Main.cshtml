    <link rel="stylesheet" href="../../css/bootstrap.min.css">
    <link rel="stylesheet" href="../../css/main.css">
</head>

<body>
    <!-- header -->
    <header class="container-header bg-blue">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="nav-h1">
                    <a class="navbar-brand" href="#">ЛК Клиента</a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-lg-4 mr-05 ml-05">
                        <li class="nav-item">
                            <a class="nav-link underline" onclick="GetBody(this.id)" href="#" id="ShipmentEvent">Заказы</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link underline" href="#">Новый заказ</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link underline" onclick="GetBody(this.id)" href="#" id="CalculatorEvent">Калькулятор</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link underline" href="#">Отчетность</a>
                        </li>
                    </ul>

                    <div class="header-right">
                        <span class="diveder-vertikal"></span>
                        <a href="/Delans/Logout" class="border-thin">Выйти</a>
